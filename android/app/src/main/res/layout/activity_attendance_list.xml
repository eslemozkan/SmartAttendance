<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/academic_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_arrow_back"
                android:background="@drawable/circle_academic_blue"
                android:padding="8dp"
                android:contentDescription="Geri" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Yoklama Listesi"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/academic_primary"
                android:gravity="center"
                android:layout_marginStart="16dp" />

            <View
                android:layout_width="32dp"
                android:layout_height="32dp" />

        </LinearLayout>

        <!-- Course Selection Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_academic"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ders Seçimi"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/academic_primary"
                android:layout_marginBottom="12dp" />

            <Spinner
                android:id="@+id/spinner_course"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/spinner_academic"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                style="@style/SpinnerAcademic" />

        </LinearLayout>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!-- Weeks Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_academic"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="QR Kod Oluşturulan Haftalar"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/academic_primary"
                android:layout_marginBottom="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_weeks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>

        <!-- Attendance Section -->
        <LinearLayout
            android:id="@+id/layout_attendance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_academic"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tv_week_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hafta 1 - 2025-01-20"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/academic_primary"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Yoklama Listesi"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/academic_text_primary"
                    android:layout_marginBottom="8dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_attendance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

                <!-- Export Button -->
                <Button
                    android:id="@+id/btn_export_report"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Yoklama Raporunu Dışa Aktar"
                    android:background="@drawable/button_academic_outline"
                    android:textColor="@color/academic_primary"
                    android:layout_marginTop="16dp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
